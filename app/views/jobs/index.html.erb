<table class="table table-boldered">
  <div class="pull-right">
  <%= link_to("Add a jib", new_job_path, :class => "btn btn-default" ) %>
  </div>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td>
    <td>
     <%= link_to("Edit", edit_job_path(job)) %>
     <%= link_to("Destroy", job_path(job), :method => :delete, :data => { :comfirm => "Are you sure?" }) %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
